<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" android:padding="10dp" >



        <ImageView
            android:id="@+id/profilImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            />

        <TextView android:id="@+id/profilPseudo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/profilImage"
            android:layout_alignTop="@+id/profilImage"
            android:textStyle="bold"
            tools:text="Pseudo" />

        <TextView
            android:id="@+id/profilNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_alignLeft="@+id/profilPseudo"
            android:layout_below="@+id/profilPseudo"
            tools:text="Note de l'utilisateur" />

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>