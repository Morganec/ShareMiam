<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
 android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.morgane.sharemiamapp.AddItemActivity">-->


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ScrollView01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtDescriptionForm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/FormAddItemExplanation"
                android:textSize="10pt"
                />

            <EditText
                android:id="@+id/edtTitleItem"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="@string/foodTitle"
                />

            <TextView
                android:id="@+id/txtValidyDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/validityDate"
                android:textSize="10pt"
                />

            <EditText
                android:id="@+id/edtValidityDate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="date" />



            <EditText
                android:id="@+id/edtDescriptionItem"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:hint="@string/descriptionFood"
                android:lines="5"
                android:layout_width="fill_parent">
            </EditText>




            <Button
                android:id="@+id/btnTakePicture"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/takePicture"
                android:textStyle="normal"></Button>


            <TextView
                android:id="@+id/tvDescriptionAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/FoodLocalisation"
                android:textSize="10pt"
                />

            <EditText
                android:id="@+id/edtCodePostal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="@string/PostalCode"
                />

            <EditText
                android:id="@+id/edtRue"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="@string/adress"
                />

            <EditText
                android:id="@+id/edtCountry"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="@string/pays"
                />


            <CheckBox
                android:id="@+id/chbxConfirm"
                android:layout_height="wrap_content"
                android:text="@string/ckb_confirm"
                android:layout_width="fill_parent">
            </CheckBox>



            <Button
                android:id="@+id/btnAdd"
                android:layout_height="wrap_content"
                android:text="Ajouter"
                android:layout_width="fill_parent">
            </Button>


        </LinearLayout>


    </ScrollView>






</android.support.constraint.ConstraintLayout>
